# early Qcarcam_edrm_rvc Service
type qcarcam_edrm_rvc, domain;
type qcarcam_edrm_rvc_exec, exec_type, file_type, vendor_file_type;

init_daemon_domain(qcarcam_edrm_rvc)

allow qcarcam_edrm_rvc camera_socket_device:dir r_dir_perms;
allow qcarcam_edrm_rvc camera_socket_device:sock_file rw_file_perms;
allow qcarcam_edrm_rvc early_services:dir r_dir_perms;
allow qcarcam_edrm_rvc ais_server:unix_stream_socket connectto;
allow qcarcam_edrm_rvc self:capability sys_admin;
allow qcarcam_edrm_rvc graphics_device:chr_file rw_file_perms;
allow qcarcam_edrm_rvc gpu_device:chr_file { ioctl open read write map};
allow qcarcam_edrm_rvc ion_device:chr_file { ioctl open read write };
allow qcarcam_edrm_rvc kmsg_device:chr_file { ioctl open write getattr};
