type carpowerd, domain;

type carpowerd_exec, exec_type, file_type, vendor_file_type;
init_daemon_domain(carpowerd)

hal_client_domain(carpowerd, hal_vehicle);

allow carpowerd self:can_socket create_socket_perms;
allowxperm carpowerd self:can_socket ioctl { unpriv_sock_ioctls priv_sock_ioctls };

allow carpowerd sysfs_usb_mode:file rw_file_perms;
allow carpowerd sysfs_hsusb_mode:file rw_file_perms;

get_prop(carpowerd, car_service_prop)

hwbinder_use(carpowerd)
get_prop(carpowerd, hwservicemanager_prop)
