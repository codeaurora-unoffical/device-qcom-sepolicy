#
# General
#

userdebug_or_eng(` allow sxrd diag_device:chr_file rw_file_perms');
#r_dir_file(sxrd, vendor_file)
r_dir_file(sxrd, sysfs_kgsl)

# Allow ion_device access
allow sxrd ion_device:chr_file r_file_perms;

# Allow access to video nodes
allow sxrd device:dir r_dir_perms;
allow sxrd video_device:chr_file rw_file_perms;
allow sxrd at_device:chr_file rw_file_perms;
# sxrd
userdebug_or_eng(`
allow sxrd debugfs:dir r_dir_perms;
allow sxrd qti_debugfs:dir r_dir_perms;
allow sxrd qti_debugfs:file rw_file_perms;
')

# Allow access to kgsl sysfs nodes for performance optimization
allow sxrd sysfs_kgsl:file rw_file_perms;

# audio permissions
# Add the rule for sxrd to access /proc/asound/pcm file
r_dir_file(sxrd, proc_asound)
# Add the rule for sxrd to access /proc/asound/card0/state file
r_dir_file(sxrd, proc_audiod)
